<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <LinearLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border_linearlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/home_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/home_user_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:text="user"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/home_header_spinner"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_popular_games_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Popular Games"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_header" />

    <LinearLayout
        android:id="@+id/home_linearlayout_popular_games_images"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_popular_games_text">

        <RelativeLayout
            android:id="@+id/home_relativelayout_popular_games_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/home_popular_games_text">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/edit_background_games" />

            <ImageView
                android:id="@+id/first_game"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginStart="6.5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/firstgame" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_relativelayout_popular_games_images2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/home_popular_games_text">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_background_games" />

            <ImageView
                android:id="@+id/second_game"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="6.5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/secondgame" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_relativelayout_popular_games_images3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/home_popular_games_text">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edit_background_games" />

            <ImageView
                android:id="@+id/thirdgame"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8.5dp"
                android:src="@drawable/thirdgame" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_linearlayout_popular_games_images2"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_linearlayout_popular_games_images">

        <RelativeLayout
            android:id="@+id/home_relativelayout_popular_games_images4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/home_popular_games_text">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/edit_background_games" />

            <ImageView
                android:id="@+id/fourth_game"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginStart="6.5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/fourthgame" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_relativelayout_popular_games_images5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/home_popular_games_text">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_background_games" />

            <ImageView
                android:id="@+id/fifth_game"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="6.5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/fifthgame" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_relativelayout_popular_games_images6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/home_popular_games_text">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edit_background_games" />

            <ImageView
                android:id="@+id/sixth_game"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8.5dp"
                android:src="@drawable/sixthgame" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/home_search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Search"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_linearlayout_popular_games_images2" />

    <EditText
        android:id="@+id/home_search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_background"
        android:drawableLeft="@drawable/search_reduced"
        android:fontFamily="@font/montserrat"
        android:hint="  Search for a Game"
        android:paddingHorizontal="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_search_text" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_games_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_background"
        android:paddingHorizontal="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_search_edit_text" />


    <RelativeLayout
        android:id="@+id/home_footer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/navbar"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/home_library"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="5dp"
            android:background="@color/blanc"
            android:scaleType="fitCenter"
            android:src="@drawable/library" />

        <TextView
            android:id="@+id/home_library_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_library"
            android:layout_marginHorizontal="61dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/montserrat"
            android:text="LIBRARY"
            android:textColor="#000000"
            android:textSize="10sp" />

        <ImageButton
            android:id="@+id/home_notifications"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="5dp"
            android:background="@color/blanc"
            android:scaleType="fitCenter"
            android:src="@drawable/notifications" />

        <TextView
            android:id="@+id/home_notifications_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_notifications"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="43dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/montserrat"
            android:text="NOTIFICATIONS"
            android:textColor="#000000"
            android:textSize="10sp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/home_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@color/blanc"
        android:scaleType="fitCenter"
        android:src="@drawable/house"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>