<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LibraryActivity">

    <LinearLayout
        android:id="@+id/homePage_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border_linearlayout"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/homePage_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/baseline_account_circle_24"></ImageView>

        <TextView
            android:id="@+id/homePage_user_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:text="user"
            android:textColor="@color/black"></TextView>

        <Spinner
            android:id="@+id/home_header_spinner"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@null"
            android:textSize="14sp"></Spinner>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/homePage_header"
        app:layout_constraintBottom_toTopOf="@id/homePage_footer_rl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/subscribedGames_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Subscribed Games"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/home_populargames_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">


                        <RelativeLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edit_background_games" />


                            <ImageView
                                android:id="@+id/first_game"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:id="@+id/gameStatus_firstGame"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/accept"
                                android:adjustViewBounds="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/strokegamestatus">
                            </ImageView>

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="15dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/libraryratingbase"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:src="@drawable/star1"
                                    android:layout_marginRight="2dp">
                                </ImageView>

                                <TextView
                                    android:id="@+id/gameRating_firstGame"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="7"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="10dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat">
                                </TextView>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edit_background_games" />

                            <ImageView
                                android:id="@+id/second_game"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:id="@+id/gameStatus_secondGame"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/pause"
                                android:adjustViewBounds="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/strokegamestatus">
                            </ImageView>

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="15dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/libraryratingbase"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:src="@drawable/star1"
                                    android:layout_marginRight="2dp">
                                </ImageView>

                                <TextView
                                    android:id="@+id/gameRating_secondGame"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="5"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="10dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat">
                                </TextView>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edit_background_games" />

                            <ImageView
                                android:id="@+id/third_game"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:id="@+id/gameStatus_thirdGame"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/stop"
                                android:adjustViewBounds="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/strokegamestatus">
                            </ImageView>

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="15dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/libraryratingbase"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:src="@drawable/star1"
                                    android:layout_marginRight="2dp">
                                </ImageView>

                                <TextView
                                    android:id="@+id/gameRating_thirdGame"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="10dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat">
                                </TextView>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edit_background_games" />

                            <ImageView
                                android:id="@+id/fourth_game"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:id="@+id/gameStatus_fourthGame"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/stop"
                                android:adjustViewBounds="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/strokegamestatus">
                            </ImageView>

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="15dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/libraryratingbase"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:src="@drawable/star1"
                                    android:layout_marginRight="2dp">
                                </ImageView>

                                <TextView
                                    android:id="@+id/gameRating_fourthGame"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="1.7"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="10dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat">
                                </TextView>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/edit_background_games" />

                            <ImageView
                                android:id="@+id/fifth_game"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:id="@+id/gameStatus_fifthGame"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/playbutton"
                                android:adjustViewBounds="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/strokegamestatus">
                            </ImageView>

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="15dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/libraryratingbase"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:src="@drawable/star1"
                                    android:layout_marginRight="2dp">
                                </ImageView>

                                <TextView
                                    android:id="@+id/gameRating_fifthGame"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="10"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="10dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat">
                                </TextView>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edit_background_games" />

                            <ImageView
                                android:id="@+id/sixth_game"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:id="@+id/gameStatus_sixthGame"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/accept"
                                android:adjustViewBounds="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/strokegamestatus">
                            </ImageView>

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="15dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/libraryratingbase"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:src="@drawable/star1"
                                    android:layout_marginRight="2dp">
                                </ImageView>

                                <TextView
                                    android:id="@+id/gameRating_sixthGame"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="2.5"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="10dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat">
                                </TextView>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Reviews"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/library_reviews_image1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/fifthgame" />

                    <TextView
                        android:id="@+id/library_reviews_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Este jogo irrita-me profundamente!!"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/library_reviews_image2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/secondgame" />

                    <TextView
                        android:id="@+id/library_reviews_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Review sobre o TLOU2 (sem spoiler)"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Topics"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/library_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/homePage_footer_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/navbar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/homePage_footer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/navbar"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginEnd="90dp">

                <ImageButton
                    android:id="@+id/homePage_library"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="70dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/blanc"
                    android:scaleType="fitCenter"
                    android:src="@drawable/library" />

                <TextView
                    android:id="@+id/home_library_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_library"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/montserrat"
                    android:text="LIBRARY"
                    android:textColor="#000000"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/homePage_notifications"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="70dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/blanc"
                    android:scaleType="fitCenter"
                    android:src="@drawable/notifications" />

                <TextView
                    android:id="@+id/homePage_notifications_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/homePage_notifications"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/montserrat"
                    android:text="NOTIFICATIONS"
                    android:textColor="#000000"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/home_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@color/blanc"
        android:scaleType="fitCenter"
        android:src="@drawable/house"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>