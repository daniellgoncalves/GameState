<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TopicActivity">

    <LinearLayout
        android:id="@+id/topic_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topic_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_linearlayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:src="@drawable/baseline_account_circle_24" />

            <TextView
                android:id="@+id/home_user_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:text="user"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/home_header_spinner"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/addgame_gameImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addgame_header">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_background_games" />

            <ImageView
                android:id="@+id/gameImage"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addgame_gameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addgame_gameImage">

            <TextView
                android:id="@+id/gameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="6.5dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/addgame_gameCompanyDate_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/addgame_gameCompanyImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addgame_gameName">

                <ImageView
                    android:id="@+id/gameCompanyImage"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addgame_gameCompany"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addgame_gameName">

                <TextView
                    android:id="@+id/gameCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="6.5dp"
                    android:maxLength="15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addgame_gameSeparator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addgame_gameName">

                <TextView
                    android:id="@+id/gameSeparator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="6.5dp"
                    android:text="|" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addgame_gameDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addgame_gameName">

                <TextView
                    android:id="@+id/gameDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="6.5dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/topic_Text"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/layout_bg"
            app:layout_constraintTop_toBottomOf="@+id/addgame_rating">

            <TextView
                android:id="@+id/topicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topicText_tv"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:gravity="top"
                android:text="Teste texto topico"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/topic_comment_button"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/edit_background_login"
                android:fontFamily="@font/montserrat"
                android:text="COMMENT"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/topic_like_button"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:alpha="0.5"
                android:backgroundTint="#00FF00"
                android:layout_marginStart="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/like"></ImageButton>

            <ImageButton
                android:id="@+id/topic_dislike_button"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:backgroundTint="#FF0000"
                android:scaleType="fitCenter"
                android:scaleY="-1"
                android:src="@drawable/like"></ImageButton>
        </LinearLayout>


    </LinearLayout>
</ScrollView>